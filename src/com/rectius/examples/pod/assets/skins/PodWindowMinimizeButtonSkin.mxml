<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" stateGroups="stateUp" />
		<s:State name="over" />
		<s:State name="up" stateGroups="stateUp" />
	</s:states>
	
	<s:Group visible.stateUp="false" visible="true" buttonMode="true">
		<s:BitmapImage source="@Embed('../images/icon_minimize_up.png')" />		
	</s:Group>
	<s:Group visible.stateUp="true" visible="false" buttonMode="true">
		<s:BitmapImage source="@Embed('../images/icon_minimize_normal.png')" />
	</s:Group>
	
</s:Skin>
